{% extends 'base.html.twig' %}

{% block title %}Offres d'emploi{% endblock %}

{% block body %}
    <h1>Offres d'emploi</h1>

    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>City</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for joboffer in joboffers %}
            <tr>
                <td>{{ joboffer.id }}</td>
                <td>{{ joboffer.title }}</td>
                <td>{{ joboffer.description }}</td>
                <td>{{ joboffer.city }}</td>
                <td>{{ joboffer.createdAt ? joboffer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ joboffer.updatedAt ? joboffer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_joboffer_show', {'id': joboffer.id}) }}">Voir</a>
                    <a href="{{ path('app_joboffer_edit', {'id': joboffer.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_joboffer_new') }}">Cr√©er offre d'emploi</a>
{% endblock %}

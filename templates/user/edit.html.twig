{% extends 'base.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block body %}
    <div class="be-form row g-3 col-7" >
        <div class="d-flex m-4">
            <a class="be-secondary-button " href="{{ path('app_user_index') }}">Retour au profil</a>
        </div>
        <h2 class="be-h2">Mes informations</h2>
        {{ form_start(form) }}
        <div class="row px-4">
            <div class="col-md-6">
                {{ form_row(form.firstname) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastname) }}
            </div>
        </div>
        <div class="row px-4">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="row px-4">
            <div class="col-md-6">
                {{ form_row(form.birthday) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.phone) }}
            </div>
        </div>
        <div class="text-center mt-4 mb-5">
            <button class="be-primary-button" type="submit">Confirmer</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

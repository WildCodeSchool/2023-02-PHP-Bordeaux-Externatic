{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}

<pre>
    {{ dump(company) }}
</pre>


<div class="container m-auto d-flex justify-content-around align-items-center my-5">
    <div class="row">
        {#Group 1#}
        <div class="col-lg-4 col-12 order-md-last align-items-center d-flex flex-column">
            <div class="card example-wrapper be-card-candidate mb-4" style="width: 20rem; height: 21rem;">
                <div class="card-body be-card-candidat">
                    <h5 class="card-title">Bonjour {{ company.name }}</h5>
                    <p class="be-maj">Mise à jour : {{ currentDateTime }}</p>
                    <p class="card-text">
                        Lieu de résidence :
                        {% if company.city %} {{ company.city }}
                        {% else %}
                        Non renseigné
                        {% endif %}
                    </p>
                    <p class="class card-text">Contact : {{ company.phone }} </p>
                    <p class="card-text">Numéro de siret : {{company.siret}} </p>
                    <p class="card-text">
                        Statut :
                        {% if app.user.status %} {{ app.user.status }}
                        {% else %}
                        Non renseigné
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
        {#Group 2#}
        <div class="col-lg-4 col-12 align-items-center d-flex flex-column justify-content-strat">
            <div class="card example-wrapper be-card-search mb-4" style="width: 20rem; height: 10rem; ">
                <div class="card-body">
                    <i class="fa-solid fa-magnifying-glass-plus fa-2xl" style="color: #ffffff;"></i>
                    <h5 class="card-title">Mes offres</h5>
                    <h6 class="card-subtitle mb-2 text-muted be-test">
                        Je modifie ou efface mes offre mise en ligne
                    </h6>
                </div>
            </div>
